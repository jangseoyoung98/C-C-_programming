#include <iostream>
using namespace std;

int main() {
	
	int sum = 0;
	double average;
	int* arr;
	try {
		arr = new int[5];
	}
	catch (bad_alloc) {
		cout << "동적 할당 실패!";
		return 0;
	}

	cout << "정수 5개 입력>> ";
	for (int i = 0; i < 5; i++) {
		cin >> arr[i];
		sum += arr[i];
	}

	average = sum / 5.0;
	cout << "평균 " << average << endl;

	delete[] arr;

	return 0;
}
